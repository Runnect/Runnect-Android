<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_item_connecting_recommend"
        android:layout_width="174dp"
        android:layout_height="124dp"
        app:cardCornerRadius="5dp"
        app:strokeColor=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="160:114"
        android:backgroundTint="@color/g4">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_connecting_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_connecting_recommend_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/all_course_favorite_selector" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_connecting_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/pretendard_semibold"
        tools:text="제목"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/cv_item_connecting_recommend"
        app:layout_constraintTop_toBottomOf="@id/cv_item_connecting_recommend" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_connecting_recommend_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/pretendard_regular"
        tools:text="OO시 OO구"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_item_connecting_recommend_title"
        app:layout_constraintTop_toBottomOf="@id/tv_item_connecting_recommend_title" />

</androidx.constraintlayout.widget.ConstraintLayout>