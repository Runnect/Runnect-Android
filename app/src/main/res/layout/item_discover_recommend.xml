<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_item_connecting_recommend"
        android:layout_width="162dp"
        android:layout_height="0dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="162:114"
        android:backgroundTint="@color/G4">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_connecting_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_item_connecting_recommend_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@id/cv_item_connecting_recommend"
        app:layout_constraintTop_toBottomOf="@id/cv_item_connecting_recommend"
        app:srcCompat="@drawable/discover_course_favorite_selector" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_connecting_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/pretendard_medium"
        tools:text="제목"
        android:textColor="@color/G1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/cv_item_connecting_recommend"
        app:layout_constraintTop_toBottomOf="@id/cv_item_connecting_recommend" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_item_connecting_recommend_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        tools:text="서울시 강동구"
        android:textSize="13sp"
        android:textColor="@color/G2"
        app:layout_constraintStart_toStartOf="@id/tv_item_connecting_recommend_title"
        app:layout_constraintTop_toBottomOf="@id/tv_item_connecting_recommend_title" />

</androidx.constraintlayout.widget.ConstraintLayout>