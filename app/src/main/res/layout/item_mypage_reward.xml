<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".presentation.mypage.reward.MyRewardActivity">

        <View
            android:id="@+id/view_item_my_page_reward_frame"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="80:98"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_item_my_page_reward_circle_frame"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/reward_circle_frame"
            app:layout_constraintEnd_toEndOf="@id/view_item_my_page_reward_frame"
            app:layout_constraintStart_toStartOf="@id/view_item_my_page_reward_frame"
            app:layout_constraintTop_toTopOf="@id/view_item_my_page_reward_frame" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_my_page_reward_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="12sp"
            android:textColor="@color/G1"
            app:layout_constraintEnd_toEndOf="@id/iv_item_my_page_reward_circle_frame"
            app:layout_constraintStart_toStartOf="@id/iv_item_my_page_reward_circle_frame"
            app:layout_constraintTop_toBottomOf="@id/iv_item_my_page_reward_circle_frame"
            android:text="코스 10개" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
