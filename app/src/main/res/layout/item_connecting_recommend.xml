<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_connecting_recommend_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/connecting_recommend_img_dummy" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_connecting_recommend_favorite_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/connecting_recommend_favorite_selector" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_connecting_recommend_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/pretendard_semibold"
        android:text="제목"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/item_connecting_recommend_iv"
        app:layout_constraintTop_toBottomOf="@id/item_connecting_recommend_iv" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_connecting_recommend_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/pretendard_regular"
        android:text="장소"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/item_connecting_recommend_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_connecting_recommend_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>